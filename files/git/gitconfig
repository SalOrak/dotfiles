# From https://github.com/akinsho/dotfiles/blob/main/git/.gitconfig
[user]
  name = "SalOrak"
  email = "99770300+SalOrak@users.noreply.github.com" # From setting/emails

[includeIf "gitdir/i:~/work/"]
   path = ~/work/.gitconfig.work
    
[includeIf "gitdir/i:~/personal/"]
  path = ~/personal/.gitconfig.personal

[status]
  submoduleSummary = true

[commit]
  template = ~/.gitmessage

[color]
  ui = auto
  status = auto
  diff = auto
  branch = auto
  showBranch = auto
  interactive = auto
  pager = true

[core]
  editor = "nvim"
  excludesfile ="~/.gitignore"

[format]
  pretty = format:%C(yellow)%h %Cblue%>(15)%ad %Cgreen%<(15)%aN%Cred%d %Creset%s

[branch]
  # Show most recently changed branches first.
  sort = -committerdate

[diff]
  colorMoved = default
  navigate = true  # use n and N to move between diff sections
  renames = copies # Detect copies as well as renames.

[merge]
  # Include summaries of merged commits in newly created merge commit messages
  log = true
  tool = "nvimdiff"

[push]
  default = current
  followTags = true

[pull]
  rebase = true

[rebase]
  autoStash = true

[fetch]
  prune = true

[gitsh]
  prompt = "\n%D %c(%b%#)%w âžœ"

[rerere]
  enabled = false

# URL shorthands
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[init]
  defaultBranch = main
[credential]
	helper = keepassxc --git-groups
