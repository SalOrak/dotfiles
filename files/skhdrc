# Change window focus within space
cmd - j : yabai -m window --focus south;
cmd - k : yabai -m window --focus north;
cmd - h : yabai -m window --focus west;
cmd - s : yabai -m window --focus east;

# Change focus between external displays (left and right)
# cmd + ctrl - s : yabai -m display --focus west;
# cmd + ctrl - g : yabai -m display --focus east;

# Zoom 
cmd - f : yabai -m window --toggle zoom-fullscreen;

# Focus first children in space
cmd + ctrl - 1 : yabai -m window --focus first

# Swap windows;
cmd + shift - j : yabai -m window --swap south;
cmd + shift - k : yabai -m window --swap north;
cmd + shift - h : yabai -m window --swap west;
cmd + shift - s : yabai -m window --swap east;

# Move window between external displays
# ctrl + cmd - 1 : yabai -m display --focus west; yabai -m display --focus west;
# ctrl + cmd - 2 : yabai -m display --focus east; yabai -m display --focus east;

# Move windows between spaces
cmd + shift - 1: yabai -m window --space 1;
cmd + shift - 2: yabai -m window --space 2;
cmd + shift - 3: yabai -m window --space 3;
cmd + shift - 4: yabai -m window --space 4;
cmd + shift - 5: yabai -m window --space 5;
cmd + shift - 6: yabai -m window --space 6;
cmd + shift - 7: yabai -m window --space 7;
cmd + shift - 8: yabai -m window --space 8;
cmd + shift - 9: yabai -m window --space 9;
cmd + shift - 0: yabai -m window --space 10;

# Float window
cmd + shift - f : yabai -m window --toggle float;

# Start / Stop / Restart yabai
# cmd + ctrl - q : yabai --stop-service
# cmd + ctrl - s : yabai --start-service
cmd + ctrl - r : yabai --restart-service

# Start terminal
cmd + shift - t : /opt/homebrew/bin/alacritty

# Start Emacs 
cmd - return : /opt/homebrew/bin/emacsclient -c
