# Change window focus within space
cmd - j : yabai -m window --focus south;
cmd - k : yabai -m window --focus north;
cmd - h : yabai -m window --focus west;
cmd - l : yabai -m window --focus east;

# Change focus between external displays (left and right)
cmd + ctrl - s : yabai -m display --focus west;
cmd + ctrl - g : yabai -m display --focus east;

# Zoom 
cmd - f : yabai -m window --toggle zoom-fullscreen;

# Focus first children in space
        cmd - 0 : yabai -m window --focus first

# Swap windows;
shift + cmd - j : yabai -m window --swap south;
shift + cmd - k : yabai -m window --swap north;
shift + cmd - h : yabai -m window --swap west;
shift + cmd - l : yabai -m window --swap east;

# Move window between external displays
ctrl + cmd - 1 : yabai -m display --focus west; yabai -m display --focus west;
ctrl + cmd - 2 : yabai -m display --focus east; yabai -m display --focus east;

# Move windows between spaces
shift + cmd - 1: yabai -m window --space 1;
shift + cmd - 2: yabai -m window --space 2;
shift + cmd - 3: yabai -m window --space 3;
shift + cmd - 4: yabai -m window --space 4;
shift + cmd - 5: yabai -m window --space 5;
shift + cmd - 6: yabai -m window --space 6;
shift + cmd - 7: yabai -m window --space 7;
shift + cmd - 8: yabai -m window --space 8;
shift + cmd - 9: yabai -m window --space 9;

# Float window
shift + cmd - f : yabai -m window --toggle float;

# Start / Stop / Restart yabai
ctrl + cmd - q : yabai --stop-service
ctrl + cmd - s : yabai --start-service

# Start terminal
shift + cmd - t : /Applications/iTerm2.app/Contents/MacOS/iTerm2

# Start Emacs 
cmd - return : /opt/homebrew/bin/emacsclient -c
